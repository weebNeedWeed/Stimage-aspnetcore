@model imagestore.ViewModels.LoginViewModel
@{
    ViewData["title"] = "Login";
}

<div class="login-wrapper text-center">
    <div class="login-circle ml-auto mr-auto text-center">
        <i class="far fa-user login-icon"></i>
    </div>
    <h2 class="login-title">Login</h2>

    <div asp-validation-summary="ModelOnly" class="text-danger login-validation-all"></div>

    <form style="margin-top: 40px" asp-action="Login" method="POST" asp-route-ReturnUrl="@ViewData["ReturnUrl"]">
        <div class="form-group">
            <input class="form-control form-control-lg" placeholder="Email" asp-for="Email">
            <span asp-validation-for="Email" class="text-left form-text text-danger"></span>
        </div>
        <div class="form-group">
            <input class="form-control form-control-lg" placeholder="Password" asp-for="Password">
            <span asp-validation-for="Password" class="text-left form-text text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-lg w-100 mt-3">login</button>
        <p class="login-text">Don't have an account ?</p>
        <a asp-action="Register">Register now!</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
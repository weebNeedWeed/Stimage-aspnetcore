<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Stimage</title>

    <link rel="icon" type="image/svg" href="~/images/logo.svg">

    <link href="~/lib/normalize/normalize.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">

    <link href="~/lib/fontawesome/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body onselectstart='return false;'>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <div class="container">
                <a class="navbar-brand" asp-action="Index" asp-controller="Home">
                    <img src="~/images/logo.svg" alt="Stimage logo" width="50" height="50" class="brand-logo" />
                    <h1 class="brand-text">Stimage</h1>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item mr-5">
                            <a class="nav-link" asp-action="Index" asp-controller="Home">Home</a>
                        </li>
                        
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main class="pb-3" style="min-height: 100vh;">
            @RenderBody()
        </main>
    </div>

    <footer class="container d-flex justify-content-between footer">
        <div class="footer-img-wrapper">
            <img src="~/images/logo.svg" alt="Stimage logo" class="footer-image"/>
            <p class="footer-copyright">&copy; 2021</p>
        </div>

        <div class="footer-nav-wrapper d-flex justify-content-around">
            <ul class="list-nav">
                <li><a class="botnav-item" asp-action="Login" asp-controller="Account">Login</a></li>
                <li><a class="botnav-item" asp-action="Register" asp-controller="Account">Register</a></li>
                <li><a class="botnav-item" asp-action="Logout" asp-controller="Account">Logout</a></li>
            </ul>

            <ul class="list-nav">
                <li><a class="botnav-item" asp-action="Index" asp-controller="Home">Home</a></li>
                <li><a class="botnav-item" asp-action="Manager" asp-controller="Image">Images</a></li>
                <li><a class="botnav-item" asp-action="Index" asp-controller="Manage">User</a></li>
            </ul>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/rxjs/rxjs.umd.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
